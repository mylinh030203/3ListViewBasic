<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#DD8E24AA"
    android:orientation="vertical"
    tools:context=".addItemForListview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvnhap"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Nhập họ và tên"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Họ và tên"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:text="Thêm" />

        <ListView
            android:id="@+id/lvname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/teal_200"/>
    </LinearLayout>
</LinearLayout>